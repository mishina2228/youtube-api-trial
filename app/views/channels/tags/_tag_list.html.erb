<% if can?(:update, Channel) %>
  <%= button_to t('helpers.link.edit'), edit_channel_tags_path(channel),
                method: :get, class: 'btn btn-sm btn-success', id: 'edit-channel-tag-btn', role: :button, remote: true %>
<% end %>
<% channel.tag_list.each do |tag| %>
  <%= link_to(tag, channels_path(search_channel: {tag: tag}), class: 'badge badge-pill badge-secondary') %>
<% end %>
