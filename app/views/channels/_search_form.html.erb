<%= form_with(model: search_channel, url: channels_path, method: :get,
              class: 'search') do |form| %>
  <div class="container box_radius">
    <div class="form-row">
      <div class="form-group col-12">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-6">
        <%= form.label :per %>
        <%= form.select :per, [5, 10, 20], class: 'form-control' %>
      </div>
      <div class="form-group col-6">
        <%= form.label :disabled %>
        <%= form.select :disabled, Search::Channel.disabled_options, class: 'form-control' %>
      </div>
    </div>
    <%= button_tag t('helpers.button.reset'), type: :button, id: 'reset-search',
                   class: 'btn btn-secondary' %>
    <%= form.submit t('helpers.submit.search'), class: 'btn btn-success', name: nil %>
  </div>
<% end %>
