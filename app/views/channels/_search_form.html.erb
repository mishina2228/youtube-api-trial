<%= form_with(model: search_channel, url: channels_path, method: :get,
              class: 'search') do |form| %>
  <div class="container box_radius">
    <div class="row">
      <div class="col-12">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <%= form.label :subscriber_count %>
      <div class="col-5 col-md-3">
        <%= form.number_field :subscriber_count_from, class: 'form-control', min: 0 %>
      </div>
      <div class="col-2 col-md-1 text-center">ï½ž</div>
      <div class="col-5 col-md-3">
        <%= form.number_field :subscriber_count_to, class: 'form-control', min: 0 %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-6">
        <%= form.label :per %>
        <%= form.select :per, Channel::PER_LIST, {}, class: 'form-control form-select' %>
      </div>
      <div class="col-6">
        <%= form.label :disabled %>
        <%= form.select :disabled, Search::Channel.disabled_options, {}, class: 'form-control form-select' %>
      </div>
    </div>
    <%= button_tag t('helpers.button.reset'), type: :button, id: 'reset-search',
                   class: 'btn btn-secondary' %>
    <%= form.submit t('helpers.submit.search'), class: 'btn btn-success', name: nil %>
  </div>
<% end %>
