<%= form_with(model: channel, local: true) do |form| %>
  <% if channel.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% channel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-4 col-md-2">
        <%= form.label :channel_id %>
      </div>
      <div class="col-8 col-md-10">
        <%= form.text_field :channel_id, class: 'form-control', required: true, placeholder: t('text.channel.channel_id.description') %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
